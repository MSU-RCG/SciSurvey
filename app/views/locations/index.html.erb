<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:building) %></th>
      <th><%= model_class.human_attribute_name(:rm_no) %></th>
      <th><%= model_class.human_attribute_name(:bsi) %></th>
      <th><%= model_class.human_attribute_name(:inspection_date) %></th>
      <th><%= model_class.human_attribute_name(:inspector) %></th>
      <th><%= model_class.human_attribute_name(:ten_liter) %></th>
      <th><%= model_class.human_attribute_name(:microorg) %></th>
      <th><%= model_class.human_attribute_name(:toxin) %></th>
      <th><%= model_class.human_attribute_name(:micro_qty) %></th>
      <th><%= model_class.human_attribute_name(:toxin_qty) %></th>
      <th><%= model_class.human_attribute_name(:research_loc) %></th>
      <th><%= model_class.human_attribute_name(:exp_loc) %></th>
      <th><%= model_class.human_attribute_name(:store_loc) %></th>
      <th><%= model_class.human_attribute_name(:protocol_id) %></th>
      <th><%= model_class.human_attribute_name(:modification_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.id, location_path(location) %></td>
        <td><%= location.building %></td>
        <td><%= location.rm_no %></td>
        <td><%= location.bsi %></td>
        <td><%= location.inspection_date %></td>
        <td><%= location.inspector %></td>
        <td><%= location.ten_liter %></td>
        <td><%= location.microorg %></td>
        <td><%= location.toxin %></td>
        <td><%= location.micro_qty %></td>
        <td><%= location.toxin_qty %></td>
        <td><%= location.research_loc %></td>
        <td><%= location.exp_loc %></td>
        <td><%= location.store_loc %></td>
        <td><%= location.protocol_id %></td>
        <td><%= location.modification_id %></td>
        <td><%=l location.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_location_path(location), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      location_path(location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_location_path,
            :class => 'btn btn-primary' %>
